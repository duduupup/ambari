<?xml version="1.0" encoding="utf-8" ?>
<metainfo>
    <schemaVersion>2.0</schemaVersion>
    <services>
        <service>
            <name>NGINX</name>
            <displayName>Nginx</displayName>
            <comment>An HTTP and reverse proxy server, a mail proxy server, and a generic TCP/UDP proxy server</comment>
            <version>1.12.2</version>

            <components>
                <component>
                    <name>NGINX_SERVER</name>
                    <displayName>Nginx Server</displayName>
                    <category>MASTER</category>
                    <cardinality>1+</cardinality>
                    <timelineAppid>nginx</timelineAppid>
                    <versionAdvertised>true</versionAdvertised>
                    <commandScript>
                        <script>scripts/nginx_server.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>600</timeout>
                    </commandScript>
                </component>
            </components>

            <osSpecifics>
                <osSpecific>
                    <osFamily>any</osFamily>
                    <packages>
                        <package>
                            <name>nginx-1.12.2</name>
                        </package>
                    </packages>
                </osSpecific>
            </osSpecifics>

            <configuration-dependencies>
                <config-type>nginx-env</config-type>
            </configuration-dependencies>
        </service>
    </services>
</metainfo>
