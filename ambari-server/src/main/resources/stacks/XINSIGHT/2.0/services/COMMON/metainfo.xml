<?xml version="1.0" encoding="utf-8" ?>

<metainfo>
    <schemaVersion>2.0</schemaVersion>

    <services>
        <service>
            <name>COMMON</name>
            <displayName>Common</displayName>
            <comment>This is the common config for the xinsight production.</comment>
            <version>2.0.0</version>

            <components>
                <component>
                    <name>COMMON_CLIENT</name>
                    <displayName>common client</displayName>
                    <category>CLIENT</category>
                    <cardinality>ALL</cardinality>
                    <commandScript>
                        <script>scripts/common_client.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>600</timeout>
                    </commandScript>

                    <!-- seting the config files -->
                    <configFiles>
                        <configFile>
                            <type>xml</type>
                            <fileName>common-cdh.xml</fileName>
                            <dictionaryName>common-cdh/cdh_env</dictionaryName>
                        </configFile>
                        <configFile>
                            <type>xml</type>
                            <fileName>common-conf.xml</fileName>
                            <dictionaryName>common-conf</dictionaryName>
                        </configFile>
                        <configFile>
                            <type>xml</type>
                            <fileName>common-env.xml</fileName>
                            <dictionaryName>common-env</dictionaryName>
                        </configFile>
                    </configFiles>
                </component>
            </components>

            <osSpecifics>
                <osSpecific>
                    <osFamily>any</osFamily>
                </osSpecific>
            </osSpecifics>

            <configuration-dependencies>
                <config-type>common-cdh</config-type>
                <config-type>common-conf</config-type>
            </configuration-dependencies>
        </service>
    </services>
</metainfo>




